<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccelerometerActivity">

    <TextView
        android:id="@+id/accelerometerTextView"
        android:layout_width="232dp"
        android:layout_height="57dp"
        android:layout_marginStart="20dp"
        android:text="Accelerometer"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/xValueTextView"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="x: "
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accelerometerTextView" />

    <TextView
        android:id="@+id/yValueTextView"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:text="y: "
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xValueTextView" />

    <TextView
        android:id="@+id/zValueTextView"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:text="z: "
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yValueTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>